generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

generator zod {
  provider         = "zod-prisma-types"
  output           = "../src/lib/generated/prisma/zod"
  useMultipleFiles = "true"
  writeBarrelFiles = "false"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Activity {
  id        String       @id @default(cuid())
  type      ActivityType
  projectId String
  userId    String
  metadata  Json?
  createdAt DateTime     @default(now())
  Project   Project      @relation(fields: [projectId], references: [id], onDelete: Cascade)
  User      User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([projectId, createdAt])
  @@index([userId])
}

model Assignment {
  id          String    @id @default(cuid())
  componentId String
  userId      String
  assignedAt  DateTime  @default(now())
  Component   Component @relation(fields: [componentId], references: [id], onDelete: Cascade)
  User        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([componentId, userId])
  @@index([userId])
}

model Component {
  id                                                    String          @id @default(cuid())
  name                                                  String
  description                                           String?
  type                                                  ComponentType   @default(TASK)
  projectId                                             String
  parentId                                              String? // For hierarchy: Epic -> Feature -> Story -> Task
  sprintId                                              String? // null = backlog
  status                                                ComponentStatus @default(PLANNING)
  priority                                              Int             @default(0)
  estimatedHours                                        Float?
  dueDate                                               DateTime?
  owner                                                 String? // Imported owner name (may not match a User)
  tags                                                  String[]        @default([])
  externalId                                            String? // For import tracking (e.g., Jira key)
  githubPrUrl                                           String? // GitHub PR URL
  createdAt                                             DateTime        @default(now())
  updatedAt                                             DateTime        @updatedAt
  Assignment                                            Assignment[]
  Project                                               Project         @relation(fields: [projectId], references: [id], onDelete: Cascade)
  Parent                                                Component?      @relation("ComponentHierarchy", fields: [parentId], references: [id], onDelete: SetNull)
  Children                                              Component[]     @relation("ComponentHierarchy")
  Sprint                                                Sprint?         @relation(fields: [sprintId], references: [id], onDelete: SetNull)
  Dependency_Dependency_dependentComponentIdToComponent Dependency[]    @relation("Dependency_dependentComponentIdToComponent")
  Dependency_Dependency_requiredComponentIdToComponent  Dependency[]    @relation("Dependency_requiredComponentIdToComponent")

  @@index([projectId])
  @@index([parentId])
  @@index([sprintId])
  @@index([status])
  @@index([type])
  @@index([externalId])
  @@index([githubPrUrl])
}

model Dependency {
  id                                                   String    @id @default(cuid())
  dependentComponentId                                 String
  requiredComponentId                                  String
  description                                          String?
  createdAt                                            DateTime  @default(now())
  Component_Dependency_dependentComponentIdToComponent Component @relation("Dependency_dependentComponentIdToComponent", fields: [dependentComponentId], references: [id], onDelete: Cascade)
  Component_Dependency_requiredComponentIdToComponent  Component @relation("Dependency_requiredComponentIdToComponent", fields: [requiredComponentId], references: [id], onDelete: Cascade)

  @@unique([dependentComponentId, requiredComponentId])
  @@index([requiredComponentId])
}

model Membership {
  id       String   @id @default(cuid())
  userId   String
  teamId   String
  role     Role     @default(MEMBER)
  joinedAt DateTime @default(now())
  Team     Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  User     User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, teamId])
  @@index([teamId])
}

model Project {
  id                   String           @id @default(cuid())
  name                 String
  description          String?
  teamId               String
  ownerId              String
  // GitHub Integration
  githubRepoUrl        String?
  githubWebhookSecret  String?
  githubPrTargetStatus ComponentStatus? @default(REVIEW)
  createdAt            DateTime         @default(now())
  updatedAt            DateTime         @updatedAt
  Activity             Activity[]
  Component            Component[]
  User                 User             @relation(fields: [ownerId], references: [id])
  Team                 Team             @relation(fields: [teamId], references: [id], onDelete: Cascade)

  @@index([ownerId])
  @@index([teamId])
  @@index([githubRepoUrl])
}

model Sprint {
  id        String       @id @default(cuid())
  name      String // e.g., "Sprint 23" or "Cycle 5"
  goal      String? // Optional sprint goal
  teamId    String
  startDate DateTime
  endDate   DateTime
  status    SprintStatus @default(PLANNING)
  capacity  Int? // Optional: team capacity in hours
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  Team      Team        @relation(fields: [teamId], references: [id], onDelete: Cascade)
  Component Component[]

  @@index([teamId])
  @@index([startDate, endDate])
  @@index([status])
}

model Team {
  id          String       @id @default(cuid())
  name        String
  description String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  Membership  Membership[]
  Project     Project[]
  Sprint      Sprint[]
}

model User {
  id         String       @id
  email      String       @unique
  name       String?
  avatarUrl  String?
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  Activity   Activity[]
  Assignment Assignment[]
  Membership Membership[]
  Project    Project[]
}

enum ActivityType {
  PROJECT_CREATED
  COMPONENT_CREATED
  COMPONENT_UPDATED
  COMPONENT_STATUS_CHANGED
  DEPENDENCY_ADDED
  DEPENDENCY_REMOVED
  MEMBER_ASSIGNED
  MEMBER_UNASSIGNED
  COMMENT_ADDED
  SPRINT_CREATED
  SPRINT_STARTED
  SPRINT_COMPLETED
  COMPONENT_ADDED_TO_SPRINT
  COMPONENT_REMOVED_FROM_SPRINT
}

enum ComponentStatus {
  PLANNING
  IN_PROGRESS
  BLOCKED
  REVIEW
  COMPLETED
}

enum ComponentType {
  EPIC
  FEATURE
  STORY
  TASK
  BUG
}

enum Role {
  OWNER
  ADMIN
  MEMBER
  VIEWER
}

enum SprintStatus {
  PLANNING // Not yet started, still being planned
  ACTIVE // Currently running
  COMPLETED // Successfully finished
  CANCELLED // Cancelled before completion
}
